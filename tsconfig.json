{
  "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "classic",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "test",
    "lib",
    "doc"
  ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
